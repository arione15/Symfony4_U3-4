{% extends 'base.html.twig' %}

{% block title %}Types - Catégories{% endblock %}

{% block monTitre %}
   Liste des Types (catégories)
{% endblock %}
{% block body %}

    <div class="row">
        {% for type in lesTypes %}
            <div class="col-12 col-md-6 col-lg-4 col-xl-3">
                <div class="card border-primary mb-3 mx-auto" style="max-width:20rem">
                    <div class="card-header text-center">
                        <img src="{{asset('images/types/' ~ type.image)}}" class="perso_imgAliment img-fluid">
                    </div>
                    <div class="card-body">
                        <h3 class="card-title text-center pb-2 mx-3 border-bottom border-primary">{{type.libelle}}</h3>
                        <p class="card-text">
                            <h4 class="text-center">Nom : {{type.libelle}}</h4>
                        </p>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}

