{% extends 'base.html.twig' %}

{% block title %}Type {{ type.libelle }}{% endblock %}

{% block monTitre %}
{% if isModification %}
    Modification {{type.libelle}}
{% else %}
    Ajout d'un type
{% endif %}
{% endblock %}
{% block body %}
{{form_start(form)}}
    <div class="row">
        <div class="col-6">
            {% if isModification %}
                <img src="{{asset('images/types/' ~ type.image )}}" style="width:25%">
            {% endif %}
            <div>{{ form_row(form.typeFile)}}</div>
            <div>{{ form_row(form.nom, {"attr" : {'class':'text-danger bg-success'},"label":"cat√©gorie :"})}}</div>
            <div>{{ form_row(form.type) }}</div>
        </div>
        <div class="col-6">
            {{form_widget(form)}}
        </div>
    </div>
    <input type="submit" class="btn btn-primary" value="Enregistrer">
{{form_end(form)}}

{% endblock %}

