{% extends 'base.html.twig' %}

{% block title %}Admin{% endblock %}
{% block monTitre %}Page d'administration{% endblock %}

{% block body %}
<a href="#" class="btn btn-success">Ajouter</a>
	<table class="table">
<tr class="">


</tr>
		{% for aliment in aliments %}
		<tr>
			<div class="col-12 col-md-6 col-lg-4 col-xl-3">
				<div class="card border-primary mb-3 mx-auto" style="max-width:20rem">
					<div class="card-header text-center">
						<img src="{{asset('images/' ~ aliment.image)}}" class="perso_imgAliment card-img-top">
					</div>
					<div class="card-body">
						<h3 class="card-title text-center pb-2 mx-3 border-bottom border-primary">{{aliment.nom}}</h3>
						<p class="card-text">
							<h4 class="text-center">Prix (kilo) :
								{{aliment.prix}}</h4>
							<table class="table text-center">
								<tr class="table-primary">
									<th>Propriété</th>
									<th>Valeur (100g)</th>
								</tr>
								<tr>
									<td>Calorie</td>
									<td>{{aliment.calories}}</td>
								</tr>
								<tr>
									<td>Protéines</td>
									<td>{{aliment.proteines}}</td>
								</tr>
								<tr>
									<td>Glucides</td>
									<td>{{aliment.glucides}}</td>
								</tr>
								<tr>
									<td>Lipides</td>
									<td>{{aliment.lipides}}</td>
								</tr>
							</table>
						</p>
					</div>
				</div>
			</div>
			</tr>
		{% endfor %}
	</div>


{% endblock %}

